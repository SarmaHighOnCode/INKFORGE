# --- Application ---
APP_NAME=inkforge
APP_ENV=development
DEBUG=true
LOG_LEVEL=info

# --- Server ---
HOST=0.0.0.0
PORT=8000

# --- Redis (Celery Broker) ---
REDIS_URL=redis://localhost:6379/0

# --- Model ---
MODEL_CHECKPOINT_PATH=../checkpoints/lstm_mdn_v1.pt
DEVICE=cpu
# Set to "cuda" if GPU available: DEVICE=cuda

# --- Export ---
EXPORT_DIR=./exports
EXPORT_DPI=300

# --- CORS ---
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
